---
import Pokeball from "./decoration/Pokeball.astro";
import TitleGradient from "./TitleGradient.astro";
---

<section class="bg-gray-900 text-white">
  <div
    class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
  >
    <div class="mx-auto max-w-3xl text-center">
      <h1
        class="bg-gradient-to-r from-amber-400 via-sky-400 to-blue-900 bg-clip-text text-6xl sm:text-7xl font-extrabold text-transparent py-3"
      >
        DiegoMarty <span class="block"> Web Developer</span>
      </h1>

      <p class="mx-auto max-w-xl sm:text-xl sm:leading-relaxed">
        Friki y programador de vez en cuando :)
      </p>
      <div class="mt-8 flex justify-center">
        <a href="#stacks" class="inline-flex justify-center w-24 h-20 rounded-full">
          <Pokeball />
        </a>
      </div>
    </div>
  </div>
</section>
