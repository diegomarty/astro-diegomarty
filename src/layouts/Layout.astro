---
import ParticleStacksBackgroud from "../components/Particles/ParticleStacksBackgroud.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="DiegoMarty website make with Astro" />
  </head>
  <body class="bg-gray-900 text-white w-full">
    <slot />
    <ParticleStacksBackgroud />
  </body>
</html>
<style is:global>
  :root {
    --background-gradient: linear-gradient(
      45deg,
      #000814 0%,
      #001d3d 25%,
      #003566 50%,
      #ffc300 75%,
      #ffd60a 100%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: var(--background-gradient);
    scroll-behavior: smooth;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .bg-clip-text {
    background-clip: text;
    -webkit-background-clip: text;
  }
</style>
